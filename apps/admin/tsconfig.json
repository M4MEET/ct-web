{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@codex/ui": [
        "../../packages/ui/src"
      ],
      "@codex/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@codex/content": [
        "../../packages/content/src"
      ],
      "@codex/content/*": [
        "../../packages/content/src/*"
      ],
      "@codex/config": [
        "../../packages/config/src"
      ],
      "@codex/config/*": [
        "../../packages/config/src/*"
      ],
      "@codex/utils": [
        "../../packages/utils/src"
      ],
      "@codex/utils/*": [
        "../../packages/utils/src/*"
      ],
      "@codex/database": [
        "../../packages/database/src"
      ],
      "@codex/database/*": [
        "../../packages/database/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
